{
    "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters" : {
    "Spotprice" : {
      "Type" : "String",
      "Description" : "Enter Price for Spot instance"
    },
    "TargetCapacity" : {
      "Type" : "Number",
      "Description" : "Enter the target capacity"
    },
    "InstanceType" : {
      "Type" : "String",
      "Description" : "Enter the instance type",
      "AllowedValues": [
                  "t2.micro",
                  "m3.medium",
                  "m1.medium",
                  "m1.large",
                  "m1.xlarge",
                  "m2.xlarge",
                  "m2.2xlarge",
                  "m2.4xlarge",
                  "m3.xlarge",
                  "m3.2xlarge",
                  "c1.medium",
                  "c1.xlarge",
                  "cc1.4xlarge",
                  "cc2.8xlarge",
                  "cg1.4xlarge"
              ]
    },
    "Subnet1": {
              "Type": "AWS::EC2::Subnet::Id",
              "Description" : "Please select subnet"
            },
    "SGname": {
                "Type": "AWS::EC2::SecurityGroup::Id",
                "Description" : "Please select Security Group"
                    },
    "IAMRole": {
                "Type": "String",
                "Description" : "Please enter IAM Instance Profile ARN",
                "ConstraintDescription" : "Must be a valid IAM Role"
                    },
    "Imageid": {
              "Type": "String",
              "Description" : "Enter the image Id"
            },
    "KeyName" : {
                "Type" : "AWS::EC2::KeyPair::KeyName",
                "Description" : "The EC2 Key Pair to allow SSH access to the instances",
                "ConstraintDescription" : "must be the name of an existing EC2 KeyPair."
              },
    "FromDate" : {
                      "Type" : "String",
                      "Description" : "Date YYYY-MM-DD T HH:MM:SS",
                      "Default" : "2018-08-06T22:16:37Z"
                      },
    "ToDate" : {
                      "Type" : "String",
                      "Description" : "Date YYYY-MM-DD T HH:MM:SS",
                      "Default" :"2018-10-06T22:16:37Z"
                    },
    "command1" : {
                      "Type" : "String",
                      "Description" : "Please enter command",
                    }
   },
"Resources": {
 "SpotFleet": {
  "Type": "AWS::EC2::SpotFleet",
  "Properties": {
    "SpotFleetRequestConfigData": {
      "SpotPrice": { "Ref": "Spotprice" },
      "TargetCapacity": { "Ref": "TargetCapacity" },
      "ValidFrom": { "Ref": "FromDate" },
      "ValidUntil": { "Ref": "ToDate" },
      "TerminateInstancesWithExpiration": true,
      "IamFleetRole": {
        "Fn::Join": [
          "", [
            "arn:aws:iam::",
            {
              "Ref": "AWS::AccountId"
            },
            ":role/aws-ec2-spot-fleet-tagging-role"
          ]
        ]
        },
      "LaunchSpecifications": [
      {
        "EbsOptimized": "false",
        "InstanceType": { "Ref": "InstanceType" },
        "ImageId":{ "Ref": "Imageid" } ,
        "KeyName": { "Ref": "KeyName" },
        "IamInstanceProfile": {
          "Arn": { "Ref": "IAMRole" },
        },
        "TagSpecifications": [
          {
            "ResourceType": "instance",
            "Tags": [
              {
                "Key": "termination",
                "Value": { "Ref": "ToDate" }
              }
            ]
          }
        ],
        "SecurityGroups": [
          {
            "GroupId": { "Ref": "SGname" },
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "\n",
              [
                "#!/bin/bash",
                { "Ref": "command1" }]]}}
      }
      ]
    }
  }
}
}
}
